{
  "manifest_version": 3,
  "name": "RequestHelper",
  "version": "0.1.0",
  "description": "A powerful Chrome extension for silent network request capturing and analysis",
  "permissions": [
    "storage",
    "webRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html"
}
